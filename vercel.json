{
  "version": 2,
  "redirects": [
    // 1. Redirect root domain (http/https) → https://www
    {
      "source": ":path*",
      "destination": "https://www.urlencoderdecoder.com/:path*",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "urlencoderdecoder.com"
        }
      ]
    },
    // 2. Redirect http://www → https://www
    {
      "source": ":path*",
      "destination": "https://www.urlencoderdecoder.com/:path*",
      "permanent": true,
      "has": [
        {
          "type": "scheme",
          "value": "http"
        },
        {
          "type": "host",
          "value": "www.urlencoderdecoder.com"
        }
      ]
    },
    // 3. (Optional) Catch https://non-www → https://www (strict canonicalization)
    {
      "source": ":path*",
      "destination": "https://www.urlencoderdecoder.com/:path*",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "urlencoderdecoder.com"
        },
        {
          "type": "scheme",
          "value": "https"
        }
      ]
    }
  ]
}
